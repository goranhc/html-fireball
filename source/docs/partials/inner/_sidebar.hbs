    <a href="javascript:void(0);" class="btn btn-primary toggle-show" data-show="sidebar1">Toggle sidebar</a>

    <!--Sidebar markup-->

    <div class="sidebar" id="sidebar1">
        <div class="sidebar-content">
            <div class="p-3">
